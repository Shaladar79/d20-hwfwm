<section class="essence-panel essence-panel-confluence">

  <h3>Confluence Essence</h3>

  <div class="essence-row">
    <label>Confluence</label>

    <select name="system.essences.confluence.key"
            class="essence-select"
            data-slot="confluence"
            {{#unless isGM}}disabled{{/unless}}>
      <option value="">— Auto / GM Select —</option>

      {{!-- Options constrained by e1/e2/e3 combos, plus GM override --}}
      {{> "systems/hwfwm-d20/templates/actors/parts/subtabs/abilities/confluence-options.hbs"
          e1=system.essences.e1.key
          e2=system.essences.e2.key
          e3=system.essences.e3.key
          current=system.essences.confluence.key}}
    </select>

    {{#unless isGM}}
      <p class="hint smalltext">
        Confluence is based on your three Essences.
      </p>
    {{/unless}}
  </div>

  <div class="essence-theme-block">
    <h4>Confluence Theme & Description</h4>
    <p class="theme-text">
      {{system.essences.confluence.theme}}
    </p>
  </div>

  <div class="essence-abilities-block">
    <h4>Confluence Abilities</h4>

    <div class="essence-ability-slot" data-essence-slot="confluence" data-ability-index="0">
      <span class="ability-placeholder">Ability Slot 1 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="confluence" data-ability-index="1">
      <span class="ability-placeholder">Ability Slot 2 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="confluence" data-ability-index="2">
      <span class="ability-placeholder">Ability Slot 3 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="confluence" data-ability-index="3">
      <span class="ability-placeholder">Ability Slot 4 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="confluence" data-ability-index="4">
      <span class="ability-placeholder">Ability Slot 5 – Drop Essence Ability here</span>
    </div>
  </div>

</section>
