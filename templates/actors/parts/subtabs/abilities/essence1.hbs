<section class="essence-panel essence-panel-primary">
  <h3>Essence 1</h3>

  <div class="essence-row">
    <label>Essence</label>

    {{!-- This path matches template.json: system.essences.e1.key --}}
    <select name="system.essences.e1.key">
      <option value="">— Select Essence —</option>

      {{!-- Pass the current value into the options partial --}}
      {{> "systems/hwfwm-d20/templates/actors/parts/subtabs/abilities/essence-options.hbs"
          current=system.essences.e1.key}}
    </select>
  </div>

  <div class="essence-theme-block">
    <h4>Theme</h4>
    <p class="theme-text">
      {{system.essences.e1.theme}}
    </p>
  </div>

  <div class="essence-abilities-block">
    <h4>Essence 1 Abilities</h4>

    {{!-- Five slots; we’ll wire drag/drop later --}}
    <div class="essence-ability-slot" data-essence-slot="e1" data-ability-index="0">
      <span class="ability-placeholder">Ability Slot 1 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="e1" data-ability-index="1">
      <span class="ability-placeholder">Ability Slot 2 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="e1" data-ability-index="2">
      <span class="ability-placeholder">Ability Slot 3 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="e1" data-ability-index="3">
      <span class="ability-placeholder">Ability Slot 4 – Drop Essence Ability here</span>
    </div>
    <div class="essence-ability-slot" data-essence-slot="e1" data-ability-index="4">
      <span class="ability-placeholder">Ability Slot 5 – Drop Essence Ability here</span>
    </div>
  </div>
</section>
