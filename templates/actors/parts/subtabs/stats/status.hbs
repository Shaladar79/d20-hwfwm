<div class="status-grid">

  {{!-- TOP-LEFT: RESOURCES --}}
  <div class="status-box">
    <h3>Resources</h3>

    {{!-- Life Force (value / max) --}}
    <div class="status-row">
      <label>Life Force</label>
      <input type="number"
             name="system.resources.lifeforce.value"
             value="{{system.resources.lifeforce.value}}">
      <span>/</span>
      <input type="number"
             name="system.resources.lifeforce.max"
             value="{{system.resources.lifeforce.max}}">
    </div>

    {{!-- Shielding (current only) --}}
    <div class="status-row-2">
      <label>Shielding</label>
      <input type="number"
             name="system.resources.shielding.value"
             value="{{system.resources.shielding.value}}">
    </div>

    {{!-- Stamina (value / max) --}}
    <div class="status-row">
      <label>Stamina</label>
      <input type="number"
             name="system.resources.stamina.value"
             value="{{system.resources.stamina.value}}">
      <span>/</span>
      <input type="number"
             name="system.resources.stamina.max"
             value="{{system.resources.stamina.max}}">
    </div>

    {{!-- Resolve (value / max) --}}
    <div class="status-row">
      <label>Resolve</label>
      <input type="number"
             name="system.resources.resolve.value"
             value="{{system.resources.resolve.value}}">
      <span>/</span>
      <input type="number"
             name="system.resources.resolve.max"
             value="{{system.resources.resolve.max}}">
    </div>

    {{!-- Armor (value / max) --}}
    <div class="status-row">
      <label>Armor</label>
      <input type="number"
             name="system.resources.armor.value"
             value="{{system.resources.armor.value}}">
      <span>/</span>
      <input type="number"
             name="system.resources.armor.max"
             value="{{system.resources.armor.max}}">
    </div>

    {{!-- Mana (value / max) --}}
    <div class="status-row">
      <label>Mana</label>
      <input type="number"
             name="system.resources.mana.value"
             value="{{system.resources.mana.value}}">
      <span>/</span>
      <input type="number"
             name="system.resources.mana.max"
             value="{{system.resources.mana.max}}">
    </div>

    {{!-- Trauma (value / max) --}}
    <div class="status-row">
      <label>Trauma</label>
      <input type="number"
             name="system.resources.trauma.value"
             value="{{system.resources.trauma.value}}">
      <span>/</span>
      <input type="number"
             name="system.resources.trauma.max"
             value="{{system.resources.trauma.max}}">
    </div>

    {{!-- Willpower only if Gold/Diamond rank --}}
    {{#if showWillpower}}
      <div class="status-row">
        <label>Willpower</label>
        <input type="number"
               name="system.resources.willpower.value"
               value="{{system.resources.willpower.value}}">
        <span>/</span>
        <input type="number"
               name="system.resources.willpower.max"
               value="{{system.resources.willpower.max}}">
      </div>
    {{/if}}
  </div>

  {{!-- TOP-RIGHT: DEFENSES --}}
  <div class="status-box">
    <h3>Defenses</h3>

    <div class="status-row-2">
      <label>Life Force Regen</label>
      <input type="number"
             name="system.defenses.lifeforceRegen.value"
             value="{{system.defenses.lifeforceRegen.value}}">
    </div>

    <div class="status-row-2">
      <label>Mana Regen</label>
      <input type="number"
             name="system.defenses.manaRegen.value"
             value="{{system.defenses.manaRegen.value}}">
    </div>

    <div class="status-row-2">
      <label>Stamina Regen</label>
      <input type="number"
             name="system.defenses.staminaRegen.value"
             value="{{system.defenses.staminaRegen.value}}">
    </div>

    <div class="status-row-2">
      <label>Defense</label>
      <input type="number"
             name="system.defenses.defense.value"
             value="{{system.defenses.defense.value}}">
    </div>

    <div class="status-row-2">
      <label>Reaction</label>
      <input type="number"
             name="system.defenses.reaction.value"
             value="{{system.defenses.reaction.value}}">
    </div>

    <div class="status-row-2">
      <label>Pace</label>
      <input type="number"
             name="system.defenses.pace.value"
             value="{{system.defenses.pace.value}}">
    </div>
  </div>

  {{!-- BOTTOM-LEFT: AFFINITIES --}}
  <div class="status-box">
    <h3>Affinities</h3>
    <div class="status-block">
      {{!-- Placeholder for future structured data --}}
      <textarea name="system.status.affinities"
                style="width:100%; height:80px; border:none; resize:vertical;">
{{system.status.affinities}}
      </textarea>
    </div>
  </div>

  {{!-- BOTTOM-RIGHT: RESISTANCES --}}
  <div class="status-box">
    <h3>Resistances</h3>
    <div class="status-block">
      <textarea name="system.status.resistances"
                style="width:100%; height:80px; border:none; resize:vertical;">
{{system.status.resistances}}
      </textarea>
    </div>
  </div>

</div>
