{{!-- INVENTORY TAB WRAPPER: Weapons | Armor | Gear | Consumables --}}

<section class="card hwfwm-inventory-wrapper">

  <nav class="sheet-tabs tabs" data-group="inventory">
    <a class="item" data-tab="weapons">Weapons</a>
    <a class="item" data-tab="armor">Armor</a>
    <a class="item" data-tab="gear">Gear</a>
    <a class="item" data-tab="consumables">Consumables</a>
  </nav>

  <section class="tab-body" style="margin-top:8px;">

    {{!-- WEAPONS SUBTAB --}}
    <div class="tab active" data-group="inventory" data-tab="weapons">
      {{> "systems/hwfwm-d20/templates/actors/parts/subtabs/inventory/weapons.hbs"
          actor=actor
          system=system }}
    </div>

    {{!-- ARMOR SUBTAB --}}
    <div class="tab" data-group="inventory" data-tab="armor">
      {{> "systems/hwfwm-d20/templates/actors/parts/subtabs/inventory/armor.hbs"
          actor=actor
          system=system }}
    </div>

    {{!-- GEAR SUBTAB --}}
    <div class="tab" data-group="inventory" data-tab="gear">
      {{> "systems/hwfwm-d20/templates/actors/parts/subtabs/inventory/gear.hbs"
          actor=actor
          system=system }}
    </div>

    {{!-- CONSUMABLES SUBTAB --}}
    <div class="tab" data-group="inventory" data-tab="consumables">
      {{> "systems/hwfwm-d20/templates/actors/parts/subtabs/inventory/consumables.hbs"
          actor=actor
          system=system }}
    </div>

  </section>
</section>
