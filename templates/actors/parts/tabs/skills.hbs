<section class="card">
  <h2>Skills</h2>

  {{#each (array "Combat" "Power" "Speed" "Spirit" "Recovery" "Crafting" "Knowledge") as |cat|}}
    <div class="skill-group" style="margin-top:12px;">
      <div class="flexrow" style="justify-content:space-between; align-items:center;">
        <h3 style="margin:0;">{{cat}}</h3>
        <button type="button" class="item-create" data-type="skill" data-category="{{cat}}"
          data-attr="{{#if (eq cat "Power")}}power{{else if (eq cat "Speed")}}speed{{else if (eq cat "Spirit")}}spirit{{else if (eq cat "Recovery")}}recovery{{else if (eq cat "Knowledge")}}spirit{{else}}power{{/if}}">
          + Add {{cat}} Skill
        </button>
      </div>

      <table class="skills-table" style="margin-top:6px;">
        <thead>
          <tr>
            <th style="width:22%">Name</th>
            <th style="width:12%">Attribute</th>
            <th style="width:10%">Rank</th>
            <th style="width:8%">Mod</th>
            <th style="width:28%">Specialization</th>
            <th style="width:10%">Trained</th>
            <th style="width:6%">Edit</th>
            <th style="width:4%">üóëÔ∏è</th>
          </tr>
        </thead>
        <tbody>
          {{#each (sortBy ../itemTypes.skill "name") as |skill|}}
            {{#if (eq skill.system.category cat)}}
              <tr class="item" data-item-id="{{skill._id}}">
                <td><a class="item-edit">{{skill.name}}</a></td>
                <td>{{skill.system.associatedAttribute}}</td>
                <td>{{skill.system.rank}}</td>
                <td>{{skill.system.mod}}</td>
                <td>{{skill.system.specialization}}</td>
                <td>
                  <input class="skill-trained" type="checkbox" data-item-id="{{skill._id}}" {{#if skill.system.trained}}checked{{/if}} />
                </td>
                <td><button type="button" class="item-edit">Open</button></td>
                <td><button type="button" class="item-delete" aria-label="Delete">&times;</button></td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
    </div>
  {{/each}}
</section>
