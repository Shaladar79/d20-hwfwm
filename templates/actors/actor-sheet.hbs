<form class="hwfwm sheet actor pc" autocomplete="off">
  <!-- Header lives inside the Stats partial so it appears on the Stats tab -->
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="stats">Stats</a>
    <a class="item" data-tab="skills">Skills</a>
    <a class="item" data-tab="abilities">Abilities</a>
    <a class="item" data-tab="inventory">Inventory</a>
    <a class="item" data-tab="notes">Notes</a>
  </nav>

  <section class="sheet-content">
   <div class="tab active" data-group="primary" data-tab="stats">
  {{> "systems/hwfwm-d20/templates/parts/tabs/stats.hbs" actor=actor system=system showWillpower=showWillpower }}
</div>

<div class="tab" data-group="primary" data-tab="skills">
  {{> "systems/hwfwm-d20/templates/parts/tabs/skills.hbs" actor=actor itemTypes=itemTypes }}
</div>

<div class="tab" data-group="primary" data-tab="abilities">
  {{> "systems/hwfwm-d20/templates/parts/tabs/abilities.hbs" actor=actor itemTypes=itemTypes }}
</div>

<div class="tab" data-group="primary" data-tab="inventory">
  {{> "systems/hwfwm-d20/templates/parts/tabs/inventory.hbs" actor=actor itemTypes=itemTypes }}
</div>

<div class="tab" data-group="primary" data-tab="notes">
  {{> "systems/hwfwm-d20/templates/parts/tabs/notes.hbs" actor=actor system=system owner=owner editable=editable }}
</div>

  </section>
</form>

