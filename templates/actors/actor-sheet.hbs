<form class="hwfwm sheet actor pc" autocomplete="off">
  <!-- HEADER -->
  <header class="sheet-header flexrow">
    <div class="profile">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    </div>

    <div class="header-fields">
      <div class="name-row">
        <input name="name"
               type="text"
               value="{{actor.name}}"
               placeholder="Name" />
      </div>

      <div class="meta-row flexrow">
        <div class="field">
          <label>Rank</label>
          <input type="text"
                 name="system.details.rank"
                 value="{{system.details.rank}}"
                 placeholder="Iron / Bronze / Silver / Gold / Diamond" />
        </div>

        <div class="field">
          <label>Nature</label>
          <input type="text"
                 name="system.details.nature"
                 value="{{system.details.nature}}"
                 placeholder="Race / Origin" />
        </div>

        <div class="field">
          <label>Role</label>
          <input type="text"
                 name="system.details.role"
                 value="{{system.details.role}}"
                 placeholder="Combat / Support / etc." />
        </div>

        <div class="field">
          <label>Background</label>
          <input type="text"
                 name="system.details.background"
                 value="{{system.details.background}}"
                 placeholder="Upbringing / History" />
        </div>
      </div>
    </div>
  </header>

  <!-- BODY -->
  <section class="sheet-body">
    <!-- Tabs -->
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item" data-tab="stats">Stats</a>
      <a class="item" data-tab="skills">Skills</a>
      <a class="item" data-tab="abilities">Abilities</a>
      <a class="item" data-tab="inventory">Inventory</a>
      <a class="item" data-tab="notes">Notes</a>
    </nav>

    <section class="sheet-content">
      <!-- TAB: STATS -->
      <div class="tab stats" data-group="primary" data-tab="stats">
        <div class="flexrow">

          <!-- ATTRIBUTES (simple for now; we can fancy this later) -->
          <section class="attributes card">
            <h2>Attributes</h2>
            <div class="attributes-grid">
              <div class="attribute">
                <div class="attr-label">Power</div>
                <label>Base</label>
                <input type="number" name="system.attributes.power.base" value="{{system.attributes.power.base}}" />
                <label>Rank</label>
                <input type="text" name="system.attributes.power.rank" value="{{system.attributes.power.rank}}" />
                <label>Rank Score</label>
                <input type="number" name="system.attributes.power.rankScore" value="{{system.attributes.power.rankScore}}" />
                <label>Mod</label>
                <input type="number" name="system.attributes.power.mod" value="{{system.attributes.power.mod}}" />
              </div>

              <div class="attribute">
                <div class="attr-label">Speed</div>
                <label>Base</label>
                <input type="number" name="system.attributes.speed.base" value="{{system.attributes.speed.base}}" />
                <label>Rank</label>
                <input type="text" name="system.attributes.speed.rank" value="{{system.attributes.speed.rank}}" />
                <label>Rank Score</label>
                <input type="number" name="system.attributes.speed.rankScore" value="{{system.attributes.speed.rankScore}}" />
                <label>Mod</label>
                <input type="number" name="system.attributes.speed.mod" value="{{system.attributes.speed.mod}}" />
              </div>

              <div class="attribute">
                <div class="attr-label">Spirit</div>
                <label>Base</label>
                <input type="number" name="system.attributes.spirit.base" value="{{system.attributes.spirit.base}}" />
                <label>Rank</label>
                <input type="text" name="system.attributes.spirit.rank" value="{{system.attributes.spirit.rank}}" />
                <label>Rank Score</label>
                <input type="number" name="system.attributes.spirit.rankScore" value="{{system.attributes.spirit.rankScore}}" />
                <label>Mod</label>
                <input type="number" name="system.attributes.spirit.mod" value="{{system.attributes.spirit.mod}}" />
              </div>

              <div class="attribute">
                <div class="attr-label">Recovery</div>
                <label>Base</label>
                <input type="number" name="system.attributes.recovery.base" value="{{system.attributes.recovery.base}}" />
                <label>Rank</label>
                <input type="text" name="system.attributes.recovery.rank" value="{{system.attributes.recovery.rank}}" />
                <label>Rank Score</label>
                <input type="number" name="system.attributes.recovery.rankScore" value="{{system.attributes.recovery.rankScore}}" />
                <label>Mod</label>
                <input type="number" name="system.attributes.recovery.mod" value="{{system.attributes.recovery.mod}}" />
              </div>
            </div>
          </section>

          <!-- RESOURCES + DEFENSES -->
          <section class="resources-and-defenses card">
            <h2>Resources</h2>
            <div class="resources-grid">
              <!-- Lifeforce -->
              <div class="res">
                <label>Life Force</label>
                <input type="number" name="system.resources.lifeforce.value" value="{{system.resources.lifeforce.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.lifeforce.max" value="{{system.resources.lifeforce.max}}" />
              </div>

              <!-- Trauma -->
              <div class="res">
                <label>Trauma</label>
                <input type="number" name="system.resources.trauma.value" value="{{system.resources.trauma.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.trauma.max" value="{{system.resources.trauma.max}}" />
              </div>

              <!-- Armor (points pool) -->
              <div class="res">
                <label>Armor</label>
                <input type="number" name="system.resources.armor.value" value="{{system.resources.armor.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.armor.max" value="{{system.resources.armor.max}}" />
              </div>

              <!-- Shielding (uncapped) -->
              <div class="res">
                <label>Shielding</label>
                <input type="number" name="system.resources.shielding.value" value="{{system.resources.shielding.value}}" />
              </div>

              <!-- Resolve -->
              <div class="res">
                <label>Resolve</label>
                <input type="number" name="system.resources.resolve.value" value="{{system.resources.resolve.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.resolve.max" value="{{system.resources.resolve.max}}" />
              </div>

              <!-- Willpower (Gold/Diamond only by rules, but always present in schema) -->
              <div class="res">
                <label>Willpower</label>
                <input type="number" name="system.resources.willpower.value" value="{{system.resources.willpower.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.willpower.max" value="{{system.resources.willpower.max}}" />
              </div>

              <!-- Mana -->
              <div class="res">
                <label>Mana</label>
                <input type="number" name="system.resources.mana.value" value="{{system.resources.mana.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.mana.max" value="{{system.resources.mana.max}}" />
              </div>

              <!-- Stamina -->
              <div class="res">
                <label>Stamina</label>
                <input type="number" name="system.resources.stamina.value" value="{{system.resources.stamina.value}}" />
                <span>/</span>
                <input type="number" name="system.resources.stamina.max" value="{{system.resources.stamina.max}}" />
              </div>
            </div>

            <h2>Defenses</h2>
            <div class="defenses-grid">
              <div class="def">
                <label>Defense</label>
                <input type="number" name="system.defenses.defense.value" value="{{system.defenses.defense.value}}" />
              </div>
              <div class="def">
                <label>Reaction</label>
                <input type="number" name="system.defenses.reaction.value" value="{{system.defenses.reaction.value}}" />
              </div>
            </div>
          </section>
        </div>
      </div>

      <!-- The other tabs are placeholders for now; you can flesh them out as we go -->

      <div class="tab skills" data-group="primary" data-tab="skills">
        <section class="card">
          <h2>Skills</h2>
          <table class="skills-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Attribute</th>
                <th>Trained</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              {{#each itemTypes.skill as |skill|}}
                <tr class="item" data-item-id="{{skill._id}}">
                  <td><a class="item-edit">{{skill.name}}</a></td>
                  <td>{{skill.system.category}}</td>
                  <td>{{skill.system.associatedAttribute}}</td>
                  <td><input type="checkbox" disabled {{#if skill.system.trained}}checked{{/if}} /></td>
                  <td>{{skill.system.notes}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </section>
      </div>

      <div class="tab abilities" data-group="primary" data-tab="abilities">
        <section class="card">
          <h2>Abilities</h2>
          <p>Add Essence Abilities, Racial Abilities, etc. here later.</p>
        </section>
      </div>

      <div class="tab inventory" data-group="primary" data-tab="inventory">
        <section class="card">
          <h2>Inventory</h2>
          <p>Weapons, armor, equipment, essences, stones, etc.</p>
        </section>
      </div>

      <div class="tab notes" data-group="primary" data-tab="notes">
        <section class="card">
          <h2>Biography</h2>
          {{editor system.notes.biography target="system.notes.biography" button=true owner=owner editable=editable}}
        </section>
        <section class="card">
          <h2>GM Notes</h2>
          {{editor system.notes.gmNotes target="system.notes.gmNotes" button=true owner=owner editable=editable}}
        </section>
      </div>

    </section>
  </section>
</form>

</form>


